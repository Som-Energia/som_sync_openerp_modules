<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_wizard_open_related_record" model="ir.ui.view">
            <field name="name">wizard.open.related.record.form</field>
            <field name="model">wizard.open.related.record</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Synchronize with Odoo">
                    <label string="This wizard will open the related ERP record" colspan="4"/>
                    <separator colspan="4"/>
                    <group colspan="4" col="2">
                        <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <button name="open_record" string="Open record" type="object" icon="gtk-execute"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_wizard_open_related_record" model="ir.actions.act_window">
            <field name="name">Open Related ERP Record</field>
            <field name="res_model">wizard.open.related.record</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_open_related_record"/>
            <field name="context" eval="{'from_model': 'odoo.sync'}"/>
            <field name="target">new</field>
        </record>

        <record id="value_wizard_sync_odoo_from_account_account" model="ir.values">
            <field name="object" eval="1"/>
            <field name="name">Open Related ERP Record</field>
            <field name="key2">client_action_multi</field>
            <field name="key">action</field>
            <field name="model">odoo.sync</field>
            <field name="value" eval="'ir.actions.act_window,'+str(ref('action_wizard_open_related_record'))" />
        </record>

    </data>
</openerp>
